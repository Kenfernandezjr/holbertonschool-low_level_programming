CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean rm $(NAME)
all:	$(NAME)

$(NAME): m.h $(NAME)
	$(CC) $(OBJ) -o $@

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean


re: oclean all
